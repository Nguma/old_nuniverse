.nuniverse
{
	position:relative;
	clear:both;
	width:100%;
	height:450px;
	top:30px;
}

.nuniverse .body
{
	
	overflow:hidden;
	padding:0;
	margin:0;
	top:0;
	color:#666;
	font-size:11px;
	height:100%;
	padding:0 0 0 0;
	
}

.nuniverse .header h5
{
	color:#999;
	font-style:italic;
}

.nuniverse .sidebar .avatar
{
	position:relative;
	margin:0;
	border:solid 2px #FFF;
	padding:0;
	background:#FFF;
}

.nuniverse .sidebar .avatar a,
.nuniverse .sidebar .avatar img
{
	position:relative;
	margin:0;
	border:none;
	padding:0;
}

.nuniverse h1
{
	font-size:40px;
	color:#333;
	margin: 0 0 5px 0;
	padding:0;

}

.nuniverse .body h2
{
	margin:0 0 5px 0;
	padding:0;
	color:#999;
	font-size:30px;
}

.nuniverse .content
{
	padding:2px;
	/*background:transparent url('/images/backgrounds/nuniverse_body_content.png') 0 0 repeat;*/
	background:none;
	position:relative;
	clear:both;
	font-weight:bold;
	font-size:14px;
	margin-bottom:2px;
	height:100%;

}

.body .content
{
/*	background:transparent url('/images/backgrounds/nuniverse_body_content.png') 0 0 repeat;*/
}

.nuniverse .perspectives
{
	position:relative;
	clear:both;
	display:block;

	padding:10px 0 0 0;
	margin:0 0 0 0;
	font-size:14px;
	font-weight:bold;
	
}

.actions dd.selected
{
	background:#FFF;
}



.nuniverse .sidebar
{
	position:relative;
	float:left;
	margin:50px 2px 0 0px;
	width:auto;
	height:100%;
	overflow:hidden;
	background:transparent url('/images/backgrounds/nuniverse_body_content.png') 0 0 repeat;
}

.nuniverse .right
{
	float:right;
	margin:0 0 0 2px;
	width:0;
	
}

.nuniverse .sidebar h3
{
	padding:5px 10px 0 10px;
}

.nuniverse .sidebar h5
{
	padding:10px;
	color:#999;
}

.nuniverse .sidebar .right
{
	position:relative;
	float:right;
	width:0;
}

.content .welcome a
{
	display:inline;
}


.nuniverse .filters
{
	font-size:11px;
	padding:0 0 0 0;
	color:#666;	
	width:10px;
	padding:10px;
	text-align:right;	
}

.nuniverse .expanded
{
	width:120px;
}

.toggable
{
	
}

.hidden
{
	display:none;
}


.nuniverse .filters dt
{
	padding:10px;
	font-weight:bold;
	color:#FFF;
	background:#333;
	cursor:pointer;
}

.nuniverse .filters .item
{
	margin-bottom:1px;
	padding:10px 30px 10px 10px;
	background:#eee url("/images/backgrounds/arrow_small.png") right center no-repeat;
}

.nuniverse .header .edit
{
	position:absolute;
	right:10px;
	top:10px;
	padding:10px;
	font-size:12px;
}

.nuniverse .connections
{
	position:relative;
	padding:0;
}

.nuniverse .connection
{
	padding:10px 10px 10px 10px;
	position:relative;
	clear:both;
	margin:0 0 2px 0px;
	font-size:14px;
	font-weight:bold;
	color:#666;
	height:40px;
	background:transparent url('/images/backgrounds/connection.png') left center no-repeat;
	cursor:pointer;
}

.nuniverse .odd
{
	background:transparent url('/images/backgrounds/connection_odd.png') left center no-repeat;
}

.nuniverse .hover
{
	background:transparent url('/images/backgrounds/connection_hover.png') left center no-repeat;
}

.nuniverse .hover a
{
	color:#FFF;
}

.nuniverse .connection .text
{
	/*background:#FFF url("/images/backgrounds/arrow_small.png") right center no-repeat;*/

	margin-top:10px;
}



.nuniverse .connection .main
{

	display:block;
}

.connection a
{
	font-size:16px;
	font-weight:bold;
	margin:0;
}

.connection p
{
	font-size:11px;
}

.nuniverse .context
{
	font-style:italic;
	color:#999;
}

.nuniverse .connection .avatar
{
	position:relative;
	float:left;
	top:0px;
	left:0px;
	margin-right:10px;
	padding:0;
	
}

.nuniverse .connection .avatar img
{
	width:40px;
	border:solid 2px #666;
}



.item .kind,
.connection .kind
{
	font-size:11px;
	padding:5px 5px 5px 0;

}

.nuniverse .add
{
	padding:10px;
	border-bottom:dotted 2px #ccc;
}

.nuniverse input
{
	border:solid 1px #ccc;
	font-size:14px;
	font-weight:bold;
	margin:5px 0 0 0;
}

.actions 
{
	margin:0 0 0 0;
}
.actions dd
{
	padding:10px;
	border-top:dotted #eee 2px;
}

.actions a
{
	font-weight:bold;
}

.actions dd p
{
	font-size:12px;
	color:#999;
	font-style:normal;
}

.content
{
	color:#666;
}

.content p
{
	color:#999;
	font-weight:normal;
	font-size:16px;
}

.content .connection p
{
	font-size:12px;
	color:#999;
}



.nuniverse h3
{
	color:#999;
	font-size:19px;
	margin: 0 0 0 0;
	padding:0;
}

.nuniverse h4
{
	font-size:14px;
	margin: 0 0 5px 0;
	font-weight:bold;
}

a
{
	margin-left:2px;
	color:#39c;
}

a.nuni
{
	font-weight:bold;
	font-size:14px;
}

.new
{
	position:relative;
	float:left;
	width:400px;
	margin-top:5px;
	padding-top:5px;
}

.explore,
.log,
.profile
{
	height:100%;
}

.profile label
{
	display:block;
}

.nuniverse .header
{
	position:relative;
	margin:0 0 2px 0;
	padding:20px 10px 20px 10px;
}

.user_kind {color:#39c;}
.comment_kind {color:#999;}
.quest_kind {color:#93c;}
.person_kind {color:#3C9;}
.location_kind {color:#C93;}

.sidebar .content
{
	background:none;
}

.message_body
{
	font-size:14px;
}

.connection  a
{
	font-size:17px;
	color:#996666;
}