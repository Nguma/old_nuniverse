<% geolocate(@path)%>
<% content_for :head do -%>
  <%= GMap.header (:local_search => true) %>
  <%= @map.to_html %>
<% end -%>
  
<div class="content header">
  <%= avatar_for(tag) %>
  <h1>
    <%= tag.content %>
  </h1>
  <h4>Location</h4> 
  <%= link_to 'Edit', edit_tag_path(tag) , :class => 'edit' %>
  <% if @connections.empty? -%>
    <h3>Nothing happened yet in this place.</h3>
  <% else -%>
    <dl class="connections">
      <% @connections.each do |connection| -%>
          <%= render :partial => "/taggings/instance", :locals => {:connection => connection}%>
      <% end -%>
    </dl>
  <% end -%>
</div>

<div class="content" style="padding:0">
    <%= @map.div(:width => "100%", :height => 450) %>
</div>

<div class="content">
  <% google(tag.content).each do |rst| -%>
    <dd><a href="<%= rst.url %>"><%= rst.title %></a>
    <p><%= rst.content %></p>
      </dd>
  <% end -%>
</div>

<div class="content log">
  <h3><%= tag.content %>'s log</h3>
  <% if @connections.empty? -%>
    <h4>Nothing happened yet.</h4>
  <% else -%>
    <h4>This is what happened lately in this nuniverse</h4>
    <dl class="connections">
      <% @connections.each do |connection| -%>
          <%= render :partial => "/taggings/instance", :locals => {:connection => connection}%>
      <% end -%>
    </dl>
  <% end -%>

</div>

<% list_for(:kind => "person", :path => @path) do -%>
  <h3>Who can you meet to help you in that quest?</h3>
  <p><i>eg:"Albert Einstein", "John Doe", "Batman"...</i></p>
<% end -%>

<% list_for(:kind => "location", :path => @path) do -%>
  <h3>Where can you go from here?</h3>
  <h4>You can go to:</h4>
<% end -%>

<% list_for(:kind => "item", :path => @path) do -%>
  <h3>What you can find in this location?</h3>
  <h4>You can find:</h4>
<% end -%>