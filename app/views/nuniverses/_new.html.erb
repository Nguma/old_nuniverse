 <% behavior = params[:behavior] || "hidden" %>
  <% @new_polyco = Polyco.new(:object => @source, :subject => Nuniverse.new)  %>
  <% form_for @new_polyco, :html => {:multipart => true, :id => "connect_nuniverse_form", :class => behavior} do |f| -%>
    <% fields_for :object, @source do |o| -%>
      <%= o.hidden_field :id %>
      <%= o.hidden_field :type %>
    <% end -%>

    
    <% fields_for(:subject) do |s| %>   
       <%= s.text_field :name , :id => "input_connect"%><%= f.submit "+", :name => "submit"  %>
    <% end -%>
    
    
  <% end -%>
