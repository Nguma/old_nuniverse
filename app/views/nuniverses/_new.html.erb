 <% behavior = params[:behavior] || "hidden" %>
  <% @new_polyco = Polyco.new(:object => @source, :subject => Nuniverse.new)  %>
  <% form_for :polyco, @new_polyco, :url => {:controller => :polycos, :action => :create}, :html => {:multipart => true, :id => "connect_nuniverse_form" } do |f| -%>
    <% fields_for :object, @source do |o| -%>
      <%= o.hidden_field :id %>
      <%= o.hidden_field :type %>
    <% end -%>
    <% fields_for :context, @context do |c| -%>
      <%= c.hidden_field :id %>
      <%= c.hidden_field :type %>
    <% end -%>
    
    <% fields_for(:subject) do |s| %>  
      <%= s.hidden_field :id %>
      <%= s.hidden_field :type %>
      <%= s.text_field :name , :id => "input_connect"%>
      <%= f.submit "+" %>
    <% end -%>
    
    
  <% end -%>
