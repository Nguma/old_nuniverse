<% nuniverse do -%>

  <div id="right-column" style="top:100px">

    <%= render :partial => "/nuniverses/information"%>
    
  
    <div class="step">
      <%= link_to "Search this nuniverse.", "#", :class => "expand_lnk", :id => "expand_filter_form" %>
      <%= render :partial => "/nuniverse/filter_form"%>
    </div>
    <% unless @nuniverse.locations.empty? %>
      <div class="step">
        <%= link_to "Search this nuniverse.", "#content" %>
        <%= render :partial => "/nuniverse/search_form"%>
      </div>
    <% end -%>
    <div class="step" id="users-box">
      Users connecteds to that nuniverse
      <% @source.users.each do |user| -%>
        <%= link_to(thumbnail_tag(user, :class => "icon"), user_url(user))%>
      <% end -%>
      <%= clear %>
      <% if @connection_to_current %>
        <%= link_to "Disconnect",  @connection_to_current, :method => :delete %>
      <% else %>
        <%= connect_link(:title => "connect with this nuniverse", :subject => @source, :object => current_user) %>
      <% end -%>
    </div>
    <%= render :partial => "/nuniverse/menu"%>

    <div class="step">
       <% @nuniverse.connections.gather_tags.each do |tag| -%>
          <%= link_to "#{tag.counted} #{tag.name.pluralize.capitalize}", nuniverse_url(@nuniverse, :filter => tag.name)  %><br/>
        <% end -%>

        <%#= render :partial => "/stories/new" %>
    </div>
  </div>
  <div id="left-column">
    <%= render :partial => "overview" %>
    
     <% if @connections.empty? -%>
       <div class="step" style="clear:left"  id="new-connection-step">
         There is no <%= @klass.downcase.to_s %> connected to this nuniverse, yet. Time to make some connections!
         <%= render :partial => "/#{@klass.pluralize.downcase}/new", :locals => {:params => {:behavior => ""}}%>
          <dl class='suggestions'></dl>
       </div>
     <% else -%>
       <%= render :partial => "/connections/connections", :locals => {:connections => @connections }%>
       <div class="step" style="clear:left" id="new-connection-step">
         <%= render :partial => "/#{@klass.pluralize.downcase}/new", :locals => {:params => {:behavior => ""}}%>
         <dl class='suggestions'></dl>
       </div>
       
      
     <% end -%>


     <div id="content"  >
     </div>
  </div>
  
 
    
   <%= render :partial => "/nuniverses/main_menu"%>
<% end -%>