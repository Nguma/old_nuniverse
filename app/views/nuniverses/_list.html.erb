<div class="content explore">
  <%= header %>
  <dl class="connections">

    <% connections.each do |connection| -%>
        <%= render :partial => "/tags/connection", :locals => {:connection => connection, :reverse => reverse}%>
    <% end -%>
  </dl>
  
  <% unless reverse -%>
  <%= new_tag_form(
    :kind => kind,
    :path => path
  )%>
  <% end -%>
</div>