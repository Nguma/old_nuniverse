<dl id="tags" style="padding:0;text-align:right">
  <dt style="padding:2%;font-weight:bold;background:#FFF;font-size:20px;margin:0 0 1% 0"><%= @source.name.capitalize %> has been listed in</dt>
  <% @source.connecteds.each do |tag| -%>
    <dd style="position:relative;float:right;clear:right;padding:2%;background:#FF0;font-size:20px;margin: 0 0 1% 0"><%= link_to tag.object.name, polyco_url(tag)  rescue tag.id.to_s%> <%= tag.tags.first.name rescue nil%></dd>
  <% end -%>
</dl>
    <dl id="categories" style="position:relative;clear:right">
      <dt style="background:#FFF;position:relative;float:right;font-size:20px;font-weight:bold">In this nuniverse</dt>
      <% @source.categories.each do |cat| -%>
        <dd style="position:relative;float:right;clear:right;padding:2%;background:#0FF;font-size:20px;margin: 0 0 1% 0"><%= link_to cat.name.pluralize, "/#{@source.unique_name}/#{cat.name}" %></dd>
      <% end %>
    </dl>


