
 <%= render :partial => "hat"%>
  <% @boxes.each do |box| -%>
    <% render_box(:box => box) do -%>
        <% klass = box.klass rescue 'Fact' %>
        <% tags = box.tags rescue nil %>
      <% @source.connections.of_klass(klass).tagged(tags).each do |c| %>
        <%= render :partial => "/#{klass.classify.pluralize.downcase}/instance", :locals => {:instance => c.subject}%>
      <% end %>
    <% end -%>
  <% end -%>