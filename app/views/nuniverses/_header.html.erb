<div class="content header" id="home_content">
      <% if logged_in? && current_user.tag == tag -%>
        <h5>You are visiting</h5> 
        <h1>Your nuniverse</h1>
      <% else -%>
        <h5>You are visiting the nuniverse of</h5> 
        <h1><%= tag.content.titleize %></h1>
        <p><%= tag.description.capitalize %></p>
      <% end -%>
      <div class="delimiter" style="clear:both;position:relative">&nbsp;</div>
    <%= body %>
</div>

<div class="submenu" style="position:absolute;top:10px;right:10px">
  <%= link_to 'Edit', edit_tag_path(tag) , :class => 'edit' %>
  <a href="#">Visit another nuniverse</a>
</div>