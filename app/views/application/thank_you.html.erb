<% nuniverse(:selected => @selected) do -%>
  <% if @selected == "feedback" -%>
    <h1>Thanks for your feedback!</h1>
    <h2><%= link_to "Add more feedback", "/feedback" %></h2>
  <% else -%>
    <h1>Thanks for registering.</h1>
    <h2>An email has been sent to you with more details. We will welcome you as soon as possible.</h2>
    
  <% end -%>
<% end -%>