<dl class="set <%= mode %>" style="width:100%;z-index:1" id="collection-<%= collection.id %>">

  <% if connections.previous_page %>

      <%= link_to(image_tag("/images/icons/arrow_less.png"), polymorphic_url(collection,:page => connections.previous_page), :class => "pager") %>

  <% end -%>
  <% connections.each  do |connection| -%>

    <dd class="tile">
     <%= render :partial => connection %>
    </dd>
  <% end -%>
  <% if connections.next_page %>

      <%= link_to(image_tag("/images/icons/arrow_more.png"), polymorphic_url(collection,:page => connections.next_page), :class => "pager")%>

  <% end -%>
</dl>