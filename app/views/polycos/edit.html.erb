<% nuniverse do -%>
  <div id="content">
     <% form_for(@polyco, :html => {:multipart => true}) do |f| %>
         <%= f.error_messages %>

         <div class="step">
           How is <%= @polyco.name %> related to <%= @polyco.object.name %>?<br/>
           <%= f.text_area :description, :rows => 5, :cols => 100, :style => "background:#FFF"%>
         </div>

          <% fields_for @polyco.subject do |s| -%>
             <%= render :partial => "/#{@polyco.subject_type.pluralize.downcase}/edit" %>
           <% end -%>
         <p>
           <%= f.submit "Great, Save it." %>
         </p>
       <% end %>
  </div>
<% end -%>

