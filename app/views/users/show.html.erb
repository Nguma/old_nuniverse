<% nuniverse(:selected => "My nuniverse") do -%>

    <% if @mode == "list" -%>
   
      <div class="column xlarge" id="left_content;">
        
       
         <% if current_user.lists.empty? -%>
          <div class="box">
            
            <h2>Your nuniverse is empty.</h2>
            <h3><%= command(:label => "+ Create a new category", :command => "Create a new category", :description => "Enter the title of the category you want to create.") %></h3>
            <div class="content"></div>
            </div>
         <% else -%>
            <%= lists_for(current_user)%>
         <% end -%>
            <%= ad_box%>
      </div>
      
    <% else -%>
      <%= columnize([ad_box, lists_for(current_user)].flatten, :size => 4)%>
    <% end -%>


  <% content_for :nav do -%>

    <%= command_box("+ Create a new category","Create a new category", :description => "Enter the title of the category you want to create.") %>
    <%= command_box("Search","search") %>
  <% end -%>

  
 
<% end -%>