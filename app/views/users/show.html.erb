<%= home_link if @source != current_user %>
<% nuniverse do -%>
  <%= render :partial => "/nuniverses/main_menu"%>
  <div id="content">
  
  <div class="step <%= @klass.downcase %>-klass submenu"  style="margin:0 0 1px 0">
    <%= render :partial => "/nuniverse/search_form"%>
    <%= render :partial => "/#{@klass.downcase.pluralize}/new"  if @source == current_user%>
    <%= clear %>
  </div>
  <%= render :partial => "/connections/connections", :locals => {:connections => @connections}%>
  </div>
  
  <%= display_options %>
  
<% end -%>



