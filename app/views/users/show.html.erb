<%= render :partial => "/nuniverses/breadcrumbs", :locals => {:path => @path}%>
<div class="nuniverse">
  <div class="sidebar left">
    <div class="content">
    <%= header_for(@user.tag)%>
    <%= render :partial => "/nuniverses/user_menu", :locals => {:tag => @user.tag, :user => @user} %>
    </div>
  </div>
  <div class="body" id="nuniverse_body">
    <%= render :partial => "/nuniverses/user", :locals => {:tag => @user.tag, :user => @user, :path => @path, :reverse => @reverse} %>
  </div>
</div>