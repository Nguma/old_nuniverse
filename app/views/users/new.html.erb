<div style="padding:100px"><div id="hat">
  <%= image_tag("/images/icons/logo-nuniverse-2009.png")%>
</div>
<div id="sign_up" style="padding:10px 40px 40px 00px">
  <h1>Signing up, Basics</h1>
  <% if (error_messages_for :user).blank? %>
    
    <h4>Three quick and easy steps.</h4>
  <% else -%>
    <%= error_messages_for :user, :header_message => "Wait a minute...", :message => ""%>
  <% end -%>
  <% form_for :user, :url => {:action => :create}, :html => { :multipart => true } do |f| -%>
    <div class="image_picker"></div>
    <label for="login">Login</label>
    <%= f.text_field :login %>

    <label for="email">Email</label>
    <%= f.text_field :email %>

    <label for="password">Password</label>
    <%= f.password_field :password %>
    <br/>
    <br/>
  
    <%= submit_tag 'Sign up' , :class => 'submit'%>
    <% end -%>
    <%= link_to "Cancel", "/" %>
</div>
</div>