<div class="nuniverse">
  <div id="breadcrumbs" >
    <%= link_to(image_tag("/images/icons/icon_nuniverse.png", :alt => "nuniverse.net"), "/", :class => "home") %>
    <h1><%= @user.login %></h1> 
  </div>
  <div class="content">
    <div class="items">
      <div class="item" class="selected">
        <%= link_to "Edit your profile", edit_user_path %>
      </div>
    </div>
    <div class="detail">
      <%= error_messages_for :user %>
      <% form_for :user, :url => user_path, :html => {:method => :put, :multipart => true } do |f| -%>
        <div class="avatar_picker"></div>
        <label for="firstname">First Name</label>
        <%= f.text_field :firstname %>

        <label for="lastname">Last Name</label>
        <%= f.text_field :lastname %>

        <label for="email">Email</label>
        <%= f.text_field :email %>
  
        <%= submit_tag 'Save Changes' , :class => 'submit' %>
      <% end -%>
    </div>
  </div>
</div>