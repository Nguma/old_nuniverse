<dl id="feeds" >
  <dt>
    <ul class="tabs" target="#feeds">
      <li class="selected"><%= link_to "Just tasted", "JustTasted", :target => "#just-tasted", :title => "Recently tasted" %></li>
      <li><%= link_to "Your tastebook", "TasteBook", :target => "#tastebook", :title => "Your bookmarked tastes" %></li>
    </ul>
    
    <%= clear %>
  </dt>
  <dd id="just-tasted">
    <dl>
      <%= will_paginate @votes %>
    <% @reviews.each do |review| -%>
      <%= render :partial => "review", :locals => {:review => review} %>
    <% end -%>
    </dl>
  </dd>

  <dd id="tastebook" style="display:none" >
    <% if !@saved_items.empty? -%>
      <dl>
        <%= will_paginate @saved_items %>
        <% @saved_items.each do |item|  -%>
          <%= render :partial => item.subject %>
        <% end -%> 
      </dl>
    <% else -%>
      <div style="min-height:500px;background:#FFF;position:relative;color:#000;padding:5%">

        <h2>This is your tastebook </h2>
        <p>You can save your essentials here. To do so, just click on the appropriate <%= image_tag('/images/icons/star.png', :style => "width:30px") %>. </p>
        <%= clear %>
      </div>
    <% end -%>
  </dd>
</dl>