<dl class="options">
  <dt>Options for <%= item.label.capitalize %></dt>
<% if @order == "by_vote" -%>
  
  <dd class="votes">
    <%= link_to(image_tag("/images/icons/star.png", 
                :alt => "vote for  #{item.label} ", 
                :style => "position:relative;float:right"), 
        "/rate/#{item.id}/1")%><%= item.votes %>
  </dd>
<% end -%>
   
    <% if item.personal == '1' -%>
      
      <dd><%= link_to("Remove from your connections",   command_with_id_url(:command => "forget", :id => item.id)) %></dd>
      
      <dd><%= link_to("Make #{item.public ? 'private' : 'public'}", command_with_id_url(:command => "make_#{item.public ? 'private' : 'public'}", :id => item.id)) %></dd>
    <% else -%>
      <dd>
        <%= link_to("Save", command_with_id_url(:command => "save", :id => item.id)) %>
      </dd>
    <% end -%>
    <dd class="actions">
      <%= link_to("< Back", "#", :class => "collapse_options")%>
    </dd>
    <%#= check_box "/taggings/#{item.id}/update", item.restricted, :checked => item.restricted,  :class => "check"%>
</dl>