<dl class="options">
  <dt>Options for <%= list.label %></dt>
  <% options_for_kind(list).each do |option| -%>
    <dd>
      <%= option %>
    </dd>
  <% end -%>
  <dd>
    <%= command(:label => "Email this list to someone", :command => "Email #{list.label} to")%>
  </dd>
  <dd>
    <%= link_to("Remove", list_url(list.id), :method => :delete) %>
    <i>Note: Just the reference to that list will be deleted, the items remain</i>
  </dd>
  <dd>
    <%= command(:label => "Rename", :command => "Rename #{list} to") %>
  </dd>
  <dd class="actions">
    <%= link_to("< Back to the list", "#", :class => "collapse_options")%>
  </dd>
</dl>
