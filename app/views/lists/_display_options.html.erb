<dl class='tabs' id="display_options" style="position:fixed;right:20px;bottom:20px;top:auto;z-index:67890">
  <dt>Display</dt>
  <% options.each do |option| -%>
    <dd class=" <%= selected == option[1] ? 'current' : '' %>">
   
        <%= link_to("#{image_tag("/images/icons/view_as_#{option[1]}.png")}", polymorphic_url(@source, :display => option[1], :klass => @klass.capitalize)) %>
    </dd>
  <% end -%>
</dl>