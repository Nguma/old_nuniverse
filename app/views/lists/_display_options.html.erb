<dl class='tabs' id="display_options">
  <dt>Display</dt>
  <% options.each do |option| -%>
    <dd class=" <%= selected == option[1] ? 'current' : '' %>">
      <% if source.is_a?(List) -%>
        <%= link_to_list(source, 
                        :title => "#{image_tag("/images/icons/view_as_#{option[1]}.png")}",
                        :mode => option[1]
                      )%>
      <% elsif source.is_a?(Tag) -%>
        <%= link_to_item(source,
                          :title => "#{image_tag("/images/icons/view_as_#{option[1]}.png")}",
                          :mode => option[1])
                      %>
      <% else -%>
        <%= link_to(image_tag("/images/icons/view_as_#{option[1]}.png"), home_url(:mode => option[1]))%>
      <% end -%>
    </dd>
  <% end -%>
</dl>