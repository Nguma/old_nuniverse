<% if @mode %>
  <% content_for :view_box do -%>
    <%= link_to("See it as list", "/lists/#{@list.id}") %>
  <% end -%>
  <% content_for :right do -%>
    <%= columnize(:boxes => images_for(@items), :size => 3)%>
  <% end -%>
<% else -%>
  <%# content_for :view_box do -%>
    <%#=  link_to("See it in images", "/list/#{@list.label}?mode=image") %>
    
  <%# end -%>
  <% content_for :right do -%>
    <div class="box"  id="list">
      
        <div class="items">
          <%= will_paginate @items %>
          <%= render :partial => "/taggings/instance", :collection => @items, :locals => {:params => {:list => @list}} %>
        </div>
    </div>
  <% end -%>
  
<% end -%>

<% nuniverse(:selected => "My nuniverse") do -%>
    <div class="hat">
      <h1><%= @list.label.capitalize.pluralize %></h1>
    </div
    
    <div class="column" id="nav">
      <%= ad_box %>

      <!-- <div class="box">
             <h2>
               <%#= yield :view_box %>
             </h2>
             
           </div> -->
           
      <%= contributors_box(@list) %>
      <div class="box" >
        <h2><%= toggle(:label => "+ Add a new item", :kind => @list.label) %></h2>
      </div>
      <%= render :partial => "map", :locals => {:items => @items}%>
    </div>
    <%= yield :right %>
<% end -%>
<%= input(:source => @list)%>