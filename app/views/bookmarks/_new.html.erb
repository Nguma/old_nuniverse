  <%#= link_to "Add a bookmark", "#", :class => "expand_lnk", :id => "expand_connect_bookmark_form" %>
   
  <% @new_polyco = Polyco.new(:object => @source, :subject => Bookmark.new)  %>
  <% form_for @new_polyco , :html => {:id => "connect_bookmark_form", :class => "hidden"} do |f| -%>
    <%= f.hidden_field :object_id %>
    <%= f.hidden_field :object_type %>
    
    <% fields_for(:subject) do |s| %>   
      <%= s.text_field :url %>
    <% end -%>
    <!-- <%#= f.check_box :is_private %> Make it private -->
    <%= submit_tag %>
  <% end -%>
  <%= clear %>
