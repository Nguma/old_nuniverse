  <%#= link_to "Add a bookmark", "#", :class => "expand-lnk", :id => "expand_connect_bookmark_form" %>
   
  <% @new_bookmark = Bookmark.new()  %>
  <% form_for @new_bookmark , :url => {:controller => "bookmarks"}, :html => {:id => "connect_bookmark_form"} do |f| -%>
    <% fields_for :object, @source do |o| %>
      <%= o.hidden_field :id %>
      <%= o.hidden_field :type %>
    <% end -%>
    
    <%= f.text_field :url %>
  
    <%= f.submit "+" %>
  <% end -%>
  <%= clear %>
