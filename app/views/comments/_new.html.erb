<% new_comment = Comment.new(:author => current_user, :parent => parent)%>
<% form_for :comment, new_comment, :url => {:controller => "comments"}, :html => {:class => "new-form"} do |f| -%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :parent_type %>
  <%= f.text_field :body , :cols => 70, :class => "input-body"%>
  <%= submit_tag "", :id => "input-note-submit"%>
<% end -%>