<% new_comment = Comment.new(:author => current_user, :parent => @source)%>
<% form_for :comment, new_comment, :url => {:controller => "comments"} do |f| -%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :parent_type %>
  <%= f.text_area :body , :rows => 2, :cols => 70, :id => "input-note-body"%>
  <%= submit_tag "", :id => "input-note-submit"%>
<% end -%>