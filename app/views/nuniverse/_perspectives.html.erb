<div class="perspectives">
  <dl>
    <dt>According to <%= section.perspective %></dt><%= image_tag("/images/icons/down.png", :alt => "Change perspective") %>
    <% if logged_in? -%>
      <% perspectives = ['you','everyone','google','map','videos','ebay','amazon','flickr','daylife','wikipedia'] -%>
    <% else -%>
      <% perspectives = ['everyone','google','map','ebay','videos','amazon','flickr','daylife','wikipedia'] -%>
    <% end -%>
    <% perspectives.each do |perspective| -%>
      <dd class="item <%= perspective == section.perspective ? 'selected' : '' %>">
        <%= link_to(perspective.capitalize, "/current_section/according_to/#{perspective}") %>
      </dd>
    <% end -%>
  </dl>
  
</div>