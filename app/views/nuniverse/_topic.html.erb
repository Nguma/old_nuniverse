<div class="nuniverse" id="nuniverse">
  <%= render :partial => "/nuniverse/breadcrumbs", :locals => 
  {
    :path => path
  }%>

  <div class="scroller">
    
  <div class="body">
    <% page_for(:tag => tag, :path => path) do -%> 
      <%= content_for_page(:tag => tag, :path => path, :perspective => @perspective, :filter => @filter) %>
    <% end -%>
    <div class="content"> 
      <div class="connections">
      </div>
      <%= link_to("Your most recent activity", "/nuniverse_of/#{path}", :class => "inner") -%>
      <%= link_to("All topics", "/nuniverse_of/#{path}/show_only/topic") -%>
      <%= link_to("Edit your profile", "/users/edit") -%>
      <%= link_to("+ Invite / manage contributors", "#") %>
      <%= link_to("+ Find related topics", "#") %>
    </div>
  </div>
  </div>
</div>

