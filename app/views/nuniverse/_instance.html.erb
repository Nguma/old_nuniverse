<%= render :partial => "/layouts/hat", :locals => {:selected => @selected }%>

<%= render :partial => "/nuniverse/visit" if logged_in? %>

<style type='text/css'>@import url('http://s3.amazonaws.com/getsatisfaction.com/feedback/feedback.css');</style>
<script src='http://s3.amazonaws.com/getsatisfaction.com/feedback/feedback.js' type='text/javascript'></script>
<script type="text/javascript" charset="utf-8">
  GSFN.feedback('http://getsatisfaction.com/nguma/feedback/topics/new?display=overlay&amp;style=idea');
</script>

<div class="nuniverse <%= dom_class rescue "" %> <%= @order ? "order_#{@order}" : "" %>" id="nuniverse" >
  <% unless @source.nil? %>
    <%= breadcrumbs %>
    <%= title %>
    

  <% end -%>

  <%= render :partial => "/nuniverses/main_menu"%>
  <div style="position:relative;float:right;width:300px;margin:0 0 0 0">
    <%= yield :right_col %>
  </div>
  <div style="position:relative;width:auto;margin:0 310px 0 0;padding:0">
    <%= content %>
  </div>
  <div class="delimiter" style="clear:both">&nbsp;</div>
  
  <div class="footer" style="position:fixed;bottom:20px;left:0;z-index:567990;display:block;width:100%;padding:0">
    <div style="padding:0 20px 0 20px">
    <%= yield :footer %>
    </div>
    
  </div>
</div>