<%= render :partial => "/layouts/hat", :locals => {:selected => @selected }%>
<%= render :partial => "/boxes/preview", :locals => {}%>
<%= render :partial => "/nuniverse/visit" if logged_in? %>

<div class="nuniverse <%= dom_class rescue "" %> " id="nuniverse" >
  <% unless @source.nil? %>
    <%= breadcrumbs %>
    <%= search_box %>
    <%= title %>
    <!-- <div id="nav"> -->
      <%= yield :nav %>
      
    <!-- </div> -->
  <% end -%>
    
  <div id="content" class="<%= @mode %>_mode">
    <%= content %>
  </div>
  <div class="delimiter" style="clear:both">&nbsp;</div>
  <div class="footer" style="position:fixed;bottom:20px;">
    <%= yield :footer %>
  </div>
</div>