<% content_for :head do -%>
   <%= GMap.header (:small_zoom => true, :with_vml => false) %>
   <%= map.to_html %>
<% end -%>
<div class="box" id="map_box">
  <%= @map.div(:width => "100%", :height => 240, :style=>"position:relative") %>
   
  <div class="actions" style="display:block">
    <% if !source.is_a?(List) %>
      <p style="color:#666"><%= source.object.property('address')%></p>
    <% end -%>
    <%= command(:label => "Change Address", :command => "new address")%>
  </div>
</div>
