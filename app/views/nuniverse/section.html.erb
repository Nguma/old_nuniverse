<% render_section(@section, :dom_classes => "current_section") do -%> 
  <% if @section.kind == "overview" -%>
    <%= render :partial => "/nuniverse/overview", :locals => {:section => @section }%>
  <% elsif @section.kind == "map" -%>
    <%= map_from_google(:location => @section.subject, :path =>@section.path)%>
  <% else -%>
    <%= connections_for(@section) %>
  <% end -%>
  
<% end -%>