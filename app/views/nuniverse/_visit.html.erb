<div class="form_box hidden" id="select_nuniverse_form" style="padding:10px;margin:10px">
  <div style="padding:40px;position:relative;width:auto">
    <h1>Visit</h1>
    <% form_tag "/tags/show" do -%>
      <fieldset style="width:100%">
        <%= hidden_field_tag "nuniverse", @source.id %>
        <div class="data"></div>
        <label>What nuniverse do you want to visit?</label><br/>
        <%= text_field_tag "input", "", :class => "input", :width => "100%" %>
        
      </fieldset>
      
    <% end -%>
    <div class="content suggestions" style="margin:20px 0 20px 0" src="/tags/suggest">
    </div>

  </div>
  <div style="position:absolute;bottom:70px;right:70px;clear:both">

    <%= link_to image_tag("/images/icons/cancel_btn.png"), "#", :title => "Cancel", :class =>"cancel_btn"%>
  </div>

</div>