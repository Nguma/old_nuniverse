<% if @items %>
  
  <div class="overview" style="margin:0 0 10px 0;clear:both">
    <p style="padding:0;"><%= @tag.description[0..400] rescue "" %></p>
    
    <%#= will_paginate(@items, :previous_label => "", :next_label => "")%>
    <h4>Connected to</h4>
    <% @items.each do |info| -%>
        <%= link_to info.subject.label, visit_url(info.subject, @perspective.tag.label) %><br/>
    <% end -%>
  </div>
  <div class="perspectives" style="font-size:15px;color:#999;margin: 0 0 5px 0">
    <h4>According to</h4>
    <%= link_to "Google", visit_url(@tag,"google") , :style => "color:#666" %> | 
    <%= link_to "Amazon", visit_url(@tag,"amazon"), :style => "color:#666"%> | 
    <%= link_to "Youtube", visit_url(@tag,"youtube"), :style => "color:#666"%> | 
    <%= link_to "Twitter", visit_url(@tag,"twitter"), :style => "color:#666"%>
  </div>
  <div  style="font-size:15px;color:#999">
    <h4>You've tagged that item</h4>
    <% @tag.tags.each do |cat| -%>
      <%= link_to (cat.predicate, "#{cat.predicate}" ,:style => "font-size:#{([cat.counted.to_i+11,18].min)}px;color:#999;margin:0 3px 0 0") %>
    <% end -%>
    <%= link_to "Add/edit tags", "/tags/edit/#{@tag.id}", :class => "trigger", :style => "font-size:12px" %>
  </div>
    

  
<% else -%>
  <p><%= @tag.description %></p>
  <p><%= @tag.url %></p>
  <% if !@tag.property('price').blank? -%>
    <p><%= link_to "Buy it on #{@tag.service} for #{@tag.property('price')}", @tag.url %></p>
  <% end -%>
<% end -%>