<dl id="breadcrumbs">
  <dd class = "home" style="z-index:9999">
    <%= link_to(image_tag("/images/icons/icon_nuniverse.png", :alt => "nuniverse.net"),"/") %>
  </dd>
  <% crumbs.each_with_index do |crumb,i| -%>
    <% #raise crumb.crumbs.inspect if i == 1%>
    <dd  style="z-index:<%= (999 - i).to_s %>;left:-<%= 30 * (i+1) %>px">
      <%= link_to_nuniverse(crumb, :path => crumb.crumbs, :max => 60, :class => "nuni #{crumb.kind}_kind") %>
     
    </dd>
  <% end -%>
</dl>