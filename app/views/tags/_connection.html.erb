<% if reverse
    tag = connection.subject
    path = TaggingPath.new
  else 
    tag = connection.object 
    path = connection.path
  end -%>

<dd class="connection <%= cycle('even', 'odd') %>"> 
    <div class="avatar"><%= avatar_for(tag) %></div>
    <div class="text">
      <div class="main"><%= link_to_nuniverse(tag, :path => path, :class => "nuni") %><span class="<%= tag.kind %>_kind"><%= tag.kind %></span>
      </div>
      <p><%= connection.description %></p>
    </div>
    
    
</dd>