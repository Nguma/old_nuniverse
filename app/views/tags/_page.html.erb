<div id="sub_menu">
  <h2><%= @kind.pluralize.capitalize %></h2>
  <% if items.empty? -%>
    <h3>No <%= @kind.pluralize %> are connected to <%= @tag.label %></h3>
    
  <% else -%>
    <h3>These are the <%= @kind.pluralize %> connected to <%= @tag.label %> <%= link_to "Add one", "#", :class => "expand_lnk", :id => "expand_connect_form_lnk"%></h3>
    <%= will_paginate items, :inner_window => 2  unless @perspective.kind == "service"%>
    <% if @perspective.kind == "service" -%>

      <div style="position:relative;float:left;width:200px;">
        <%= link_to(image_tag("/images/icons/powered_by_#{@perspective.label}.png"), "#")%>
      </div>
      
     
    <% end -%>
    <%= sorting_options :source => @tag  unless items.empty? %>
  <% end -%>
  
   
  <div class="connect_form <%= items.empty? ? "" : "hidden" %>" id="connect_form" >
    <%= render :partial => "/#{@kind.pluralize}/new" %>
  </div>
  
  
  <div class="delimiter" style="clear:left;">&nbsp;</div>
</div>
<%= columnize(render_connections(items)) %>