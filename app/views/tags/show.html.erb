<%= render :partial => "/nuniverse/connect"  %>
<%= render :partial => "/tags/email"  %>
<%= render :partial => "/users/account" %>
<%= render :partial => "/users/groups" %>

<% nuniverse(:selected => "My nuniverse") do -%>
  <div id="content" class="<%= @mode %>_mode" style="clear:both;height:380px;overflow:hidden">
  <% if @items.empty? -%>
    <h3>This nuniverse is empty for now.</h3>
    <h3>Would you like to connect something to <%= @tag.label %> ?</h3>
    <h3><%= link_to "Yes, add something", "#", :id => "select_tag_lnk" , :class => "select_form_lnk"%></h3>
    <h3><%= link_to "No thanks, I'll just visit something else", "#",  :id => "select_nuniverse_lnk" %></h3>
  <% else -%>
    
      <%= sorting_options :source => @tag  %>
      <%= will_paginate @items, :inner_window => 2  unless @perspective.kind == "service"%>
      <div class="delimiter" style="clear:both">&nbsp;</div>
      <%= columnize(boxes_for(@items)) %>
  
    
  <% end -%>
  <% content_for :nav do -%>
  
  <div id="main_menu" style="display:block;width:90%;position:relative">
    <%= render :partial => "/nuniverse/new" %>
   </div>
    <%#= display_options %>
  <% end -%>
   </div>
   <%= search_box %>
   <%= render :partial => "/nuniverse/tag_cloud" %>
   
   
  <% content_for :footer do -%>
     <%= perspectives %>
  <% end -%>
  
<%= image_tag("/images/icons/ajax-loader.gif", :alt => "loading... please wait", :style => "padding:10px", :id => "main_spinner", :class => "spinner hidden") %>
  
<% end -%>
