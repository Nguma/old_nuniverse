<% else -%>
<% nuniverse(:selected => "My nuniverse") do -%>
<div id="sub_menu">
   <%= link_to "email that to ...", "/tags/create_email/#{@tag.id}?filter=#{@filter}", :style => "position:relative;float:right"%>
