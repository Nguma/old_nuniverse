<div style="padding:40px" class="tag_form">
  <h1><%= @tag.label %></h1>
  <h4>These tags are public. Meaning there are not associated with any particular context but <%= @tag.label.capitalize %> itself.</h4>
  
  <div class="tags">
     
  <% @tags.each do |tag| -%>
    <div style="display:block" class="tag">
      <div style="position:relative;float:left;width:auto;padding:5px 10px 5px 10px;background:#eeeeef;font-weight:bold;font-size:20px;margin:0 1px 1px 0"><%= tag.predicate %><span style="text-align:right;padding:0 0 0 30px"><%= link_to "x", "/tags/remove_tag/#{tag.id}", :class => "trigger", :mode => "remove" -%></span></div>
    </div>
  <% end -%>
    </div>
    
    <div class="response"></div>
    <div class="delimiter" style="padding:5px 0 0 0 ">&nbsp;</div>
    <% form_tag "/tags/update/#{@tag.id}" do -%>
   <label>New Tag</label>
   <%= text_field_tag "tag", "" %><%= link_to image_tag("/images/icons/add_button.png"), "/tags/add_tag/#{@tag.id}", :class => "trigger", :style => "padding:10px 0 0 0", :mode => "add" %>
  <% end %>

     <br/>
     
     <%= link_to "< To #{@tag.label.capitalize}'s nuniverse", visit_url(@tag.id, current_user.login)%>
  
</div>