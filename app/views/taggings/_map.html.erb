
  <% @map = map(:source => tagging.object, :path => tagging.full_path, :items => items ) %>

  <div class="box" id="map_box">
    <% if @map -%>
      <% content_for :head do -%>
        <%= GMap.header (:large_map => true, :with_vml => false) %>
        <%= @map.to_html %>
      <% end -%>
      <%= @map.div(:width => "100%", :height => 300, :style=>"position:relative") %>
    <% else -%>
      <% unless tagging.object.kind == 'list' -%>
        <p>
          <strong>
            <%= link_to("Add an Address", "#", :class => "toggle")%>
            <%= link_to("Locate", "/map/#{tagging.id}")%>
          </strong>
        </p>
        <% form_tag "/taggings/update/#{tagging.id}", :id => "address_form", :class => "hidden" do -%>
          <fieldset>
            <%= text_field_tag "address", "" %>
            <%= submit_tag %>
          </fieldset>
        <% end -%>
    <% end -%>
    <% end -%>
  </div>
