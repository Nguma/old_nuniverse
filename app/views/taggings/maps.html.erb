<% @map = map(:location => @tagging.object, :path => @tagging.full_path ) %>

<% nuniverse do -%>
    <%= breadcrumbs(@tagging.path)%>
    <h1><%= @tagging.object.label.capitalize %></h1>
    <div class="delimiter">&nbsp;</div>
    <% if @map -%>
      <% content_for :head do -%>
        <%= GMap.header (:local_search => true, :large_map => true, :with_vml => false) %>
        <%= @map.to_html %>
      <% end -%>
      <div class="right">
        <%= @map.div(:width => '100%', :height => '100%') %>
      </div>
    <% end -%>
    
    <%= render :partial => "/nuniverse/connections", :locals => {
      :service => @service,
      :items => @items,
      :selected => @selected
    }%>
    <div class="options">
      <%= link_to "back to content", @tagging , :class => "option" %>
    </div>
<% end -%>
