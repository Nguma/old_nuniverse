<div class="box list <%= dom_class %>" id="<%= dom_id %>" >
  <%= expander_icon %>  
  <% unless title.blank?%>
    <%#= image_tag("/images/icons/#{kind}.png", :class => "icon", :alt => "")  rescue ""%>
    <h2>
      <span class="size" style="color:#ccc"><%= items.total_entries %></span>
      <%= link_to_list(source) %> 
    </h2>
  <% end -%>
  <%= spinner %>
  <div class="content">
    <div class="items" >
        <%= will_paginate(items, :params => {:kind => kind}) %>
        <% items.each do |item| -%>
          <%= render_item(item, :source => source)%>
        <% end -%>     
    </div>
  </div>
  <div class="actions">
    <%= (link_to "x", "/lists/#{source.id}", :confirm => 'Are you sure?', :method => :delete, :style => "position:relative;float:left") rescue "" %>
    <%= command(:label => "Email to", :command => "Email #{source.label} to")%>
    <%= command(:label => "+ Add", :command => "Add to #{source.label}") %>
  </div>
</div>