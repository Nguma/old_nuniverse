<% nuniverse do -%>
    <%= breadcrumbs(@tagging.path)%>
    
    <h1>
      <%= avatar_for(@tagging.object)  %>
      <%= @tagging.object.label.capitalize %> 
      <span class="service">
        <%= " according to #{@service.capitalize}" if @service%>
      </span>
      
    </h1>
    <%= kind_options(@tagging) %>
    <div class="delimiter">&nbsp;</div>
    <%= elements_proper_to_kind(@tagging) %>
    <%= render :partial => "/nuniverse/connections", :locals => {
      :service => @service,
      :items => @items,
      :selected => @selected,
      :order => @order,
      :tagging => @tagging
    }%>
    <% unless @service -%>
      <h2>Add Something</h2>
      <%= render :partial => "/taggings/find_or_create" , :locals => {
        :subject => @tagging.object, 
        :path => @tagging.full_path
      }%>
    
      <%#= link_to 'Edit', edit_list_path(@tag) %> 
      <div class="options">
        <%= link_to "Share this topic with someone", "/taggings/share/#{@tagging.id}" , :class => "option" if current_user == @tagging.owner %>
        <%= link_to "Google this topic", "/google/#{@tagging.id}" , :class => "option" %>
        <%= link_to "Locate", "/map/#{@tagging.id}" , :class => "option" %>
        <%= link_to "Images", "/taggings/#{@tagging.id}?service=images" , :class => "option" %>
        <%= link_to 'Delete', @tagging, :confirm => 'Are you sure?', :method => :delete, :class => "option" %>
      </div>
    <% else -%>
      <div class="options">
        <%= link_to "back to content", @tagging , :class => "option" %>
      </div>
    <% end -%>
    <div id="google_ads">
    <script type="text/javascript"
       src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
     </script>
    </div>
<% end -%>