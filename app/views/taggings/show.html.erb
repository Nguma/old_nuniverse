<% nuniverse(:dom_class => @tagging.object.kind, :selected => "My nuniverse") do -%>

      <div class="column small" id="left-column">
        <%= image_box%>
        <%= tag_box(:source => @tagging.object) %>
      </div>
      <div class="column large" id="right-column">
        <% if @mode == "image" %>
          <%= columnize([ ad_box, content_for_item(@tagging) ].flatten, :size => 3)%>
        <% elsif @mode == "card" %>
          <%= columnize([ ad_box, lists_for(@tagging) ].flatten, :size => 2)%>
        <% else -%>
          <%= ad_box %>
          <%= content_for_item(@tagging) %>
        <% end -%>  
      </div>
      
    <% content_for :nav do -%>
    
      <%= perspectives(:source => @tagging) %>
      <% if service_is_nuniverse? -%>
        <%= new_list_button %>
      <% end -%>
       <%= command_box("Search","search") %>
    <% end -%>
  
<% end -%>