<dd class="connection <%= cycle('even','odd') %>"> 
  <% if instance.object -%>
    <%= avatar_for(instance.object) %>
      <h3>
        <%= link_to(instance.object.content, "/section_of/#{instance.path}_#{instance.object.id}",  :class => "main inner") %>
      </h3>
        
        <% unless instance.path.taggings.empty? -%>
        <p> Added to  
          <% instance.path.taggings[1 .. -1].each do |tagging| -%>
            <%= link_to_tagging(tagging) %>
          <% end -%>
          by <%= link_to_nuniverse(instance.user.tag) %>
        </p>
        <% end -%>
    <% else -%>
      <%= instance.id%>
    
    <% end -%>

</dd>