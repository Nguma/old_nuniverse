<% if connections.length == 1 -%>
  <div class="article">
    <% d = Metaweb::Type::Object.find(connections.first.id).article %>
    <%= textilize d %>
    <% if section.subject.description.blank? -%>
      <% section.subject.description = d -%>
      <% section.subject.save -%>
    <% end -%>
  </div>
<% elsif connections.empty? -%>
  <div class="article">
    <h2>Nothing was found.</h2>
  </div>
<% else -%>
 <div class="connections">
 <% connections.each do |rst| -%>
   <dd class="connection <%= cycle('even', 'odd') %>" style="height:auto">
   <%#= render :partial => "/taggings/manage" , :locals => {
         :path => path,
         :data => "#{rst.kind} #{rst.name} #freebase_id #{rst.id}" 
       }%>
     <%= image_tag("/images/icons/#{rst.kind}.png", :class => 'avatar') %>
     <h3>
       <%= link_to(rst.name, "http://www.freebase.com/#{rst.id}") %>
       <span class="source">@ Freebase</span>
     </h3>
    <div class="delimiter">&nbsp;</div>
   </dd>
 <% end -%>
</div>

<% end -%>