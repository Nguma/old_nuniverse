<% items = google_localize(:source => @input)%>


<% items[0..6].each do |item| -%>
  <div class="connection">
    <strong><%= link_to(item.label,  create_and_connect_url(@tag.id), :class => "trigger", :mode => "connect") %></strong>
    <p><%= item.property('address') %> <%= item.property('tel') %></p>
    <div class="data" style="display:none">
      <%= hidden_field_tag "data", item.data %>
      <%= hidden_field_tag "input", item.property('address') %>
    </div>
  </div>
<% end -%>
<div class='delimiter'>&nbsp;</div>
<%= image_tag("/images/icons/powered_by_google.gif", :style => "position:relative")%>