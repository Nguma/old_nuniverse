<html>
<body style="background-color:#FFF">
<p>
  <%= h @sender.login.capitalize %> wants you to take a look at 
  <h1 style="margin:0 0 5px 0;color:#999"><%= @title.capitalize %></h1>
  <h2><%= h @message %></h2>
</p>
<table style="padding:0;margin:0;border:none;width:100%">

  <% @items.each_with_index do |item,i| %>
   
    <tr style="height:50px;background:#eee;margin:0 0 0 0;border:none;padding:5px;font-size:15px;color:#666">
      <td style="border:none;margin:0;width:50px">
        <% unless item.subject.avatar.nil? %>
          <img src="cid:<%= item.subject.avatar(:small) %>@nuniverse.net" height="50px" width="50px" style="border:solid 5px #ccc;"/>
        <% end -%>
      </td>
      <td style="border:none;padding:0 0 0 5px;margin:0">
        
            <% if item.subject.is_a?(Bookmark) == "bookmark" -%>
              <%= link_to("#{item.subject.label.capitalize}", item.subject.url, :style => "color:#369") %>
            <% else -%>
              <%= link_to(item.subject.name, polymorphic_url(item.subject, :host => "nuniverse.net"), :style => "color:#369") %>
              <%= item.description %>.
            <% end -%>
       
        
      </td>
    </tr>
  <% end -%>
</table>

<p>There's more in his <a href="<%= @url %>">nuniverse</a></p>
</body>
</html>