<div class="connection <%= connection.subject.kind %>_connection">
  <div class="subject ">
    <%= render_tag connection.subject %>
    <p class="tags"><%= connection.tags.join(',')%></p>
    
  </div>
  <div class="preview">
    <div class="hidden">
    <%= link_to "preview", preview_url(connection), :class => "preview_url" %>
    </div>
  </div>

  
  <div style="clear:both"></div>
  
</div>