<div class ="connection <%= connection.subject.class.to_s.downcase %>-connection  <%= cycle('even','odd') %>">
  <span class="klass" style="line-height:0"><%#= connection.subject.class.to_s %></span>
  <%= thumbnail_tag connection.subject  %>
  <div class="star-rating" >
    <% 5.times do |time| %>
    <%= link_to image_tag("/images/icons/empty.png"), "/polycos/rate/#{connection.id}?score=#{time+1}", :class => "star #{connection.score > time ? "on_#{connection.score.ceil.to_s[0,1]}" : ""}" %>
    <% end -%>
  </div>
  <p class="description">
    <%= render_connection_description(connection) %>
  </p>
  
  <%= link_to "Edit this connection", edit_polyco_url(connection), :class => "edit_lnk" if authorized_to_edit?(connection)%>

  <div class="delimiter"></div>
</div>