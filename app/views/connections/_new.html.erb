<% @new_polyco = Polyco.new(:object => @source, :subject => @klass.classify.constantize.new) -%>

<% form_for @new_polyco, {:multipart => true}  do |f| %>
  <%= f.hidden_field :object_id %>
  <%= f.hidden_field :object_type %>
  <% fields_for :subject do |s| -%>
    <%= render :partial => "/#{@klass.downcase.pluralize}/new"%>
    
  <% end -%>
  <%= f.text_field :name %><%= f.submit "Create" %><br/>
  
<% end %>