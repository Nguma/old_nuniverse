<div class="box <%= item_classes rescue "" %>" style = "<%= @mode == "image" ? "" : "overflow:hidden;"%>">
  <%= render_item(item, :kind => item.kind, :item_classes => item_classes) %>
  
  <div class="content" style="padding:0px 20px 20px 20px;position:relative">
    
    <% if item.service.nil? -%>
    
     <%= link_to("",preview_url(item.id, :kind => item.kind), :class => "preview_url")%>
      
    <% else -%>

     <p style="padding:0;width:340px;word-wrap:break-word;font-size:13px;color:#333">
        <%= item.description[0.300] rescue "" %><br/>
        <% if !item.property('price').blank? -%>
            <%= link_to("Buy it on #{item.service} for #{item.property('price')}", item.url, :style => "color:#393") %>
          <% else -%>
            <%= link_to(item.url, item.url, :style => "color:#393") rescue ""%>
          <% end -%>
        
      </p>
      
    <% end -%>
    
  </div>
  
  <div class="hidden">
    
    <%#= add_to_fav_link(item, :source => @tag)%>
    
    <%= link_to("Edit connections with #{@tag.label}",categorize_url(item.id, @tag), :class => "categorize_url")%>
  </div>
  <div class="delimiter">&nbsp;</div>
</div>